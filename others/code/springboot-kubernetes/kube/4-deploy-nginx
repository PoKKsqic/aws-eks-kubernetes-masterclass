#apiVersion: v1
#kind: Namespace # create the namespace for this application
#metadata:
#  name: server
---
apiVersion: apps/v1
kind: Deployment 
metadata:
  name: nginx-deployment
  namespace: server
spec:
  selector:
    matchLabels:
      app: nginx
  template:
    metadata:
      labels:
        app: nginx
    spec:
      containers:
      - name: nginx
        image: 123456789123.dkr.ecr.us-east-1.amazonaws.com/web:nginx
        ports:
        - containerPort: 80
        # Add EFS mount
        volumeMounts:
        - name: server-efs-pvc
          mountPath: /efs/
      volumes:
      - name: server-efs-pvc
        persistentVolumeClaim:
          claimName: server-efs-storage-claim
---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: nginx-hpa
  namespace: server
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: nginx-deployment
  minReplicas: 2
  maxReplicas: 20
  targetCPUUtilizationPercentage: 10
---
apiVersion: v1
kind: Service
metadata:
  name: nginx-service
  namespace: server
  labels:
    app: nginx
spec:
  selector:
    app: nginx
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort
