apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: server
  name: ingress-server
  annotations:
    kubernetes.io/ingress.class: alb
    alb.ingress.kubernetes.io/scheme: internet-facing
    alb.ingress.kubernetes.io/target-type: ip # using IP routing policy of ALB
    alb.ingress.kubernetes.io/load-balancer-attributes: idle_timeout.timeout_seconds=600
    alb.ingress.kubernetes.io/load-balancer-attributes: routing.http.drop_invalid_header_fields.enabled=true
    alb.ingress.kubernetes.io/target-group-attributes: deregistration_delay.timeout_seconds=30
    alb.ingress.kubernetes.io/healthcheck-timeout-seconds: '3'
    alb.ingress.kubernetes.io/healthcheck-interval-seconds: '5'
    #alb.ingress.kubernetes.io/load-balancer-attributes: deletion_protection.enabled=true
    #alb.ingress.kubernetes.io/load-balancer-attributes: access_logs.s3.enabled=true,access_logs.s3.bucket=my-access-log-bucket,access_logs.s3.prefix=my-app
    
    alb.ingress.kubernetes.io/security-groups: sg-0ce66ab33f3cf87ad
    alb.ingress.kubernetes.io/subnets: subnet-03be448c39ea1555a,subnet-024d89ca9b7e31c4f,subnet-0bb84352c03c8b811

    #alb.ingress.kubernetes.io/wafv2-acl-arn: arn:aws:wafv2:us-west-2:xxxxx:regional/webacl/xxxxxxx/3ab78708-85b0-49d3-b4e1-7a9615a6613b
    #alb.ingress.kubernetes.io/waf-acl-id: 499e8b99-6671-4614-a86d-adb1810b7fbe
spec:
  rules:
    - http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: nginx-service # refer to the service defined in deploy.yaml
                port:
                  number: 80
